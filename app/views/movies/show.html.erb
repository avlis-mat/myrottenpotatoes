<h2>Details about <%= @movie.title %></h2>

<ul>
  <li>Rating: <%= @movie.rating %></li>
  <li>Released on: <%= @movie.release_date.strftime('%B %d, %Y') if @movie.release_date %></li>
</ul>

<p><%= @movie.description %></p>

<%= link_to 'Edit info', edit_movie_path(@movie) %>
<%= link_to 'Delete', movie_path(@movie), data: { turbo_method: :delete,  turbo_confirm: 'Are you sure?' } %>
<%= link_to 'Back to movie list', movies_path %>